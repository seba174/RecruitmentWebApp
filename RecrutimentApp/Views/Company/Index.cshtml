@model IEnumerable<Company>
@{
    ViewData["Title"] = "Index";
}

<div class="row page-box">
    <div class="col-sm-12">
        <h2>Companies list</h2>

        @using (Html.BeginForm("Index", "Company", FormMethod.Get))
        {
            <div class="input-group col-md-12" style="margin-bottom: 14px">
                <input type="text" class="form-control" placeholder="Search company by name..."
                       name="search" id="search" />
                <span class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </span>
            </div>
        }

        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var offer in Model.OrderBy(o => o.Name))
                {
                    <tr>
                        <td>
                            @Html.ActionLink(offer.Name, "Details", "Company", new { offer.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @Html.ActionLink("Add company", "Create", "Company", null, new { @class = "btn btn-primary" })
    </div>
</div>