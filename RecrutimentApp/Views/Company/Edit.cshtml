@model Company
@{
    ViewData["Title"] = "Edit";
}

<div class="row mt-3">
    <div class="col-sm-12">
        <h2 class="mb-4">@Model.Name</h2>

        @using (Html.BeginForm("Edit"))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)

            <div class="form-group">
                @Html.LabelEditorValidationMessageFor(m => m.Name)
            </div>

            <div class="form-group">
                @Html.LabelEditorValidationMessageFor(m => m.HeadquaterLocation)
            </div>

            <div class="form-group">
                @Html.LabelEditorValidationMessageFor(m => m.WebSiteUrl)
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        }
    </div>
</div>

