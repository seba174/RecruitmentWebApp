@model Company
@{
    ViewData["Title"] = "Create";
}

<div class="row page-box mt-3">
    <div class="col-sm-12">
        <h2 class="mb-4">Create company</h2>

        @using (Html.BeginForm("Create"))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelEditorValidationMessageFor(m => m.Name)
            </div>

            <div class="form-group">
                @Html.LabelEditorValidationMessageFor(m => m.HeadquaterLocation)
            </div>

            <div class="form-group">
                @Html.LabelEditorValidationMessageFor(m => m.WebSiteUrl)
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        }
    </div>
</div>

