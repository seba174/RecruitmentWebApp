@model JobApplicationWithOfferName
@{
    ViewData["Title"] = "Details";
}

<div class="row page-box">
    <div class="col-sm-12">
        <h2>Details of application for: @Html.ActionLink(Model.OfferName, "Details", "JobOffer", new { id = Model.JobOfferId })</h2>

        <div class="form-group">
            @Html.LabelForWithEmptyLine(m => m.FirstName)
            @Html.DisplayFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelForWithEmptyLine(m => m.Lastname)
            @Html.DisplayFor(m => m.Lastname, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelForWithEmptyLine(m => m.EmailAddress)
            @Html.DisplayFor(m => m.EmailAddress, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelForWithEmptyLine(m => m.PhoneNumber)
            @Html.DisplayFor(m => m.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelForWithEmptyLine(m => m.DateOfBirth)
            @Html.DisplayFor(m => m.DateOfBirth, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelForWithEmptyLine(m => m.CvUrl)
            @Html.DisplayFor(m => m.CvUrl, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
</div>



